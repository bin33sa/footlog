<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fl.mapper.StadiumMapper">

	<!-- 구장목록 조회 -->
	<select id="listStadium" parameterType="map"
		resultType="com.fl.model.StadiumDTO">
		
		SELECT
			stadium_code ,
			stadium_name, region, stadium_image
		FROM stadium
		ORDER BY stadium_code DESC
	</select>
	
	<!-- 구장 수(페이징 처리 용) -->
	<select id="stadiumCount"
          parameterType="map"
          resultType="int">
    SELECT COUNT(*)
    FROM stadium
  </select>
	
</mapper>